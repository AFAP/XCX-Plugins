<calendar id="calendar"
  class='content'
  mode='pickerRange'
  dot-days="{{dotDays}}"
  days-desc="{{daysDesc}}"
  dot-color="#0000ff"
  show-more-days="{{showMoreDays}}"
  show-more-months="{{showMoreMonths}}"
  title-custom='true'
  selected-date='{{selectedDate}}'
  begin-date='{{beginDate}}'
  end-date='{{endDate}}'
  min-date='{{minDate}}'
  max-date='{{maxDate}}'
  bindOnMonthChange="onMonthChange"
  bindOnDayClick='onDayClick'
  bindOnRangeComplete='onRangeComplete'
  language='{{language}}'
  days-style='{{daysStyle}}' />




<button bindtap="addDot">刷新数据</button>